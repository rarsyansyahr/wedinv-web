---
type Props  = {
    title: string
    subtitle: string
}

const {title, subtitle} = Astro.props
---

<div class="flex flex-col items-center gap-3">
  <h4 class="font-monallesia text-lg text-[#939580]">{title}</h4>
  <h2 class="text-2xl text-[#242424] font-light">{subtitle}</h2>
  <div class="w-full flex flex-col items-center gap-2">
    <hr class="w-9/12 text-[#F3E1DB]" />
    <hr class="w-5/12 text-[#F3E1DB]" />
  </div>
</div>
