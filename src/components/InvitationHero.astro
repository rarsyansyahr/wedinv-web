---
import { Image } from "astro:assets";
import AnisRizky from "../assets/images/anis_rizky.png";
import FlowerArrangements from "../assets/images/flower_arrangements.png";
---

<section class="flex flex-col sm:items-center sm:justify-center relative pt-4 sm:pt-8">
  <div class="flex flex-col sm:flex-row h-auto sm:w-8/12">
    <div class="flex-1 flex justify-center pb-4 sm:justify-end sm:pb-0">
      <Image
        src={AnisRizky}
        alt="Anis & Rizky"
        loading="lazy"
        format="webp"
        class="w-9/12"
      />
    </div>
    <div
      class="bg-[#f0e6ef] flex-1 pt-14 pb-28 text-center flex justify-center flex-col gap-5 sm:py-0 sm:rounded-tr-[34em] sm:gap-10"
    >
      <div
        class="flex flex-col font-monallesia text-5xl gap-3 sm:text-7xl sm:gap-6 text-[#515A44] text-shadow-sm"
      >
        <span>Anis</span>
        <span>&</span>
        <span>Rizky</span>
      </div>
      <div class="text-[#707070] font-light text-lg mt-7 sm:text-2xl sm:mt-12">
        We Are Getting Married In
      </div>
      <div class="text-[#87748F] font-semibold text-xl sm:text-5xl">
        12 . 12 . 2012
      </div>
    </div>
  </div>
  <Image
    src={FlowerArrangements}
    alt="Flower Arrangements"
    class="absolute h-auto w-auto -bottom-6 sm:-bottom-28 sm:w-9/12"
    loading="lazy"
    format="webp"
  />
</section>
