---
import Story1 from "../assets/images/story1.jpg";
import Story2 from "../assets/images/story2.jpg";
import Story3 from "../assets/images/story3.jpg";
import InvitationSectionHeader from "./InvitationSectionHeader.astro";
import { Image } from "astro:assets";

const memories = [Story1, Story2, Story3, Story1, Story2, Story3, Story1, Story2];
---

<section class="mt-16 mb-8 px-3 flex flex-col gap-8 sm:mt-32">
  <InvitationSectionHeader
    title="Sweet Memories"
    subtitle="Our Captured Moment"
  />

  <div class="flex flex-row items-center flex-wrap"> 
    {
    memories.map((memory) => (
      <div class="p-2 shadow-md flex-1/2">
        <Image src={memory} alt="Story 1" format="webp" loading="lazy" />
      </div>
    ))
  }
  </div>
</section>
